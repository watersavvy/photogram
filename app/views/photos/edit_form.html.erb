<h1>Editing Photo #<%= @photo.id %></h1>

<form action= "http://localhost:3000/update_photo/<%= @photo.id %>">

<div>
    <label for="caption">Caption</label>
    <input placeholder="Enter a caption here:" value="<%= @photo.caption %>" name="caption" type="text" id="caption">
  </div>

<div>
	<label for="source">Source URL</label>
	<input name="source" value="<%= @photo.source %>" type="source" id="source">
</div>


<div>
<input type="submit" value="Update Photo">
or <a href="http://localhost:3000/photos">Cancel</a>
</div>


</form>
